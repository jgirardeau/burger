<h1>Cats!</h1>

<h2>Hamburgers Not Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
  <h1>{{burger_name}}</h1>
  {{/unless}}
  {{/each}}
</ul>

<h2>Hamburgers  Devoured</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
  <h1>{{burger_name}}</h1>
  {{/if}}
  {{/each}}
</ul>


<h2>Add a Cat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>
