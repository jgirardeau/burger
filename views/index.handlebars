<h2>Not Devoured</h2>
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <div>
    <l1>{{burger_name}}
      <form class="devour-form" data="{{id}}">
        <input type="hidden" name="devour" value="true">
        <button type="submit">Devour!</button>
      </form>
    </l1>
  </div>

  {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>
<ul>
  {{#each burgers}}
  {{#if devoured}}
  <h1>{{burger_name}}</h1>
  {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="ca"></label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add a Burger</button>
</form>